<window>
	<defaultcontrol>20000</defaultcontrol>
	<allowoverlay>false</allowoverlay>
	<type>dialog</type>
	
	<coordinates>
		<system>1</system>
		<posx>-10</posx>
		<posy>-20</posy>
	</coordinates>

	<controls>
		<control type="image">
			<description>Black background to hide menu flashes between songs</description>
			<visible>!Window.IsVisible(Visualisation)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>pandora-1px-black.png</texture>
		</control>
		<control type="button" id="20000">
			<description>dummy button to set initial view</description>
			<posx>0</posx>
			<posy>0</posy>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<onfocus>Skin.Reset(PandoraVis)</onfocus>
			<onfocus>SetFocus(2000)</onfocus>
			<ondown>200</ondown>
			<onup>200</onup>
			<onleft>200</onleft>
			<onright>200</onright>
		</control>
		<control type="group" id="2000">
			<control type="group">
				<visible>Skin.HasSetting(PandoraVis)</visible>
				<animation effect="fade" pulse="true" time="3000" start="0" end="75" tween="sine" condition="true">Conditional</animation>
				<control type="image">
					<posx>20</posx>
					<posy>50</posy>
					<width>50</width>
					<height>50</height>
					<aspectratio>keep</aspectratio>
					<texture>pandora-p.png</texture>
				</control>
			</control>
			<control type="group">
				<visible>!Skin.HasSetting(PandoraVis)</visible>
				<animation effect="fade" time="300">VisibleChange</animation>
				<control type="image">
					<description>panel</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>730</width>
					<height>500</height>s
					<texture border="20,10,10,30">pandora-panel.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<description>logo</description>
					<posx>75</posx>
					<posy>60</posy>
					<width>590</width>
					<height>73</height>
					<texture>pandora-logo.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="group" id="3000">
					<posx>75</posx>
					<posy>150</posy>
					<!--Station List-->
					<control type="group">
						<animation effect="fade" reversible="true" time="300">VisibleChange</animation>
						<control type="list" id="200">
							<width>220</width>
							<height>300</height>
							<onleft>200</onleft>
							<onright>330</onright>
							<onup>200</onup>
							<ondown>200</ondown>
							<viewtype label="535">list</viewtype>
							<scrolltime>200</scrolltime>
							<itemlayout height="22">
								<control type="image">
									<width>210</width>
									<height>20</height>
									<posx>0</posx>
									<posy>0</posy>
									<texture border="3">twc-input-nofocus.png</texture>
								</control>
								<control type="label">
									<posx>5</posx>
									<posy>0</posy>
									<width>200</width>
									<height>20</height>
									<font>font10</font>
									<aligny>center</aligny>
									<textcolor>ff959494</textcolor><!-- main text color -->
									<selectedcolor>ffffffff</selectedcolor>
									<align>left</align>
									<info>ListItem.Label</info>
								</control>
							</itemlayout>
							<focusedlayout height="22">
								<control type="image">
									<width>210</width>
									<height>20</height>
									<posx>0</posx>
									<posy>0</posy>
									<visible>Control.HasFocus(200)</visible>
									<texture border="3">twc-input-focus.png</texture>
								</control>
								<control type="image">
									<width>210</width>
									<height>20</height>
									<posx>0</posx>
									<posy>0</posy>
									<visible>!Control.HasFocus(200)</visible>
									<texture border="3">twc-input-nofocus.png</texture>
								</control>
								<control type="label">
									<posx>5</posx>
									<posy>0</posy>
									<width>200</width>
									<height>20</height>
									<font>font10</font>
									<aligny>center</aligny>
									<textcolor>ffffffff</textcolor>
									<selectedcolor>7fffffff</selectedcolor>
									<align>left</align>
									<info>ListItem.Label</info>
								</control>
							</focusedlayout>
						</control>
					</control>

					<!--Now Playing-->
					<control type="group">
						<posx>230</posx>
						<posy>0</posy>
						<control type="image" id="310">
							<description>album art</description>
							<posx>30</posx>
							<posy>0</posy>
							<width>100</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[MusicPlayer.cover]</texture>
						</control>
						<control type="label" id="320">
							<description>song title</description>
							<posx>150</posx>
							<posy>10</posy>
							<width>220</width>
							<height>30</height>
							<font>font13</font>
							<textcolor>ff959494</textcolor>
							<align>left</align>
							<info>MusicPlayer.Title</info>
						</control>
						<control type="label" id="321">
							<description>artist</description>
							<posx>150</posx>
							<posy>40</posy>
							<width>220</width>
							<height>30</height>
							<font>font13</font>
							<textcolor>ff959494</textcolor>
							<align>left</align>
							<info>MusicPlayer.Artist</info>
						</control>
						<control type="label" id="322">
							<description>album</description>
							<posx>150</posx>
							<posy>70</posy>
							<width>220</width>
							<height>30</height>
							<font>font13</font>
							<textcolor>ff959494</textcolor>
							<align>left</align>
							<info>MusicPlayer.Album</info>
						</control>
						<control type="progress">
							<posx>30</posx>
							<posy>140</posy>
							<width>300</width>
							<height>15</height>
							<info>Player.Progress</info>
						</control>
						<!--Control Buttons-->
						<control type="button" id="330">
							<description>thumbs down</description>
							<posx>30</posx>
							<posy>200</posy>
							<height>50</height>
							<width>50</width>
							<onleft>200</onleft>
							<onright>331</onright>
							<ondown>335</ondown>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-thumb-down.png</texturefocus>
							<texturenofocus>pandora-thumb-down-nofocus.png</texturenofocus>
						</control>
						<control type="button" id="331">
							<description>thumbs up</description>
							<posx>92</posx>
							<posy>200</posy>
							<height>50</height>
							<width>50</width>
							<onleft>330</onleft>
							<onright>332</onright>
							<ondown>335</ondown>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-thumb-up.png</texturefocus>
							<texturenofocus>pandora-thumb-up-nofocus.png</texturenofocus>
						</control>
						<control type="togglebutton" id="332">
							<description>play</description>
							<posx>154</posx>
							<posy>200</posy>
							<height>50</height>
							<width>50</width>
							<label>-</label>
							<onleft>331</onleft>
							<onright>333</onright>
							<ondown>335</ondown>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-play.png</texturefocus>
							<texturenofocus>pandora-play-nofocus.png</texturenofocus>
							<usealttexture>Player.Playing</usealttexture>
							<alttexturefocus>pandora-pause.png</alttexturefocus>
							<alttexturenofocus>pandora-pause-nofocus.png</alttexturenofocus>
							<onclick>XBMC.PlayerControl(Play)</onclick>
						</control>
						<control type="button" id="333">
							<description>skip</description>
							<posx>216</posx>
							<posy>200</posy>
							<height>50</height>
							<width>50</width>
							<onleft>332</onleft>
							<onright>334</onright>
							<ondown>335</ondown>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-skip.png</texturefocus>
							<texturenofocus>pandora-skip-nofocus.png</texturenofocus>
						</control>
						<control type="button" id="334">
							<description>info</description>
							<posx>278</posx>
							<posy>200</posy>
							<height>50</height>
							<width>50</width>
							<onleft>333</onleft>
							<ondown>335</ondown>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-info.png</texturefocus>
							<texturenofocus>pandora-info-nofocus.png</texturenofocus>
						</control>
						<control type="button" id="335">
							<description>hide</description>
							<posx>154</posx>
							<posy>270</posy>
							<height>25</height>
							<width>50</width>
							<onleft>330</onleft>
							<onright>334</onright>
							<onup>332</onup>
							<aspectratio>keep</aspectratio>
							<texturefocus>pandora-hide.png</texturefocus>
							<texturenofocus>pandora-hide-nofocus.png</texturenofocus>
							<onclick>Skin.SetBool(PandoraVis)</onclick>
						</control>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>